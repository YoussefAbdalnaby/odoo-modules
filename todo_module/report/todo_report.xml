<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_report_todo_task" model="ir.actions.report">
        <field name="name">Task Report</field>
        <field name="model">todo.task</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">todo_module.report_todo_task</field>
        <field name="report_file">todo_module.report_todo_task</field>
        <field name="binding_model_id" ref="model_todo_task"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_todo_task">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="task">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Task Report</h2>

                        <div class="row mt32">
                            <div class="col-6">
                                <table class="table table-sm table-borderless">
                                    <tr>
                                        <td>
                                            <strong>Task Name:</strong>
                                        </td>
                                        <td>
                                            <span t-field="task.name"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <strong>Category:</strong>
                                        </td>
                                        <td>
                                            <span t-field="task.category_id"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <strong>Priority:</strong>
                                        </td>
                                        <td>
                                            <span t-field="task.priority_label"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <strong>Status:</strong>
                                        </td>
                                        <td>
                                            <span t-field="task.state"
                                            />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <strong>Due Date:</strong>
                                        </td>
                                        <td>
                                            <span t-field="task.due_date"/>
                                            <span t-if="task.is_overdue" class="text-danger ml-2">âš  OVERDUE</span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <strong>Assigned To:</strong>
                                        </td>
                                        <td>
                                            <span t-field="task.user_id"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>

                        <div class="row mt32" t-if="task.description">
                            <div class="col-12">
                                <h4>Description</h4>
                                <p t-field="task.description"/>
                            </div>
                        </div>
                    </div>
                </t>

            </t>
        </t>
    </template>
</odoo>